{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM", "ES6", "ES2022"],
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "ts-node": {
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "lib": ["ESNext", "DOM", "ES6", "ES2022", "ES5"],
      "outDir": "./dist",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
    },
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}